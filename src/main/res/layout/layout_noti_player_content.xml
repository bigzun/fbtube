<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/bg_player_noti">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_image_small_noti"
            android:layout_height="@dimen/size_image_small_noti"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_small_noti"
            android:background="@color/bg_image"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:paddingRight="@dimen/margin_small_noti">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/control_layout"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_title"/>

            <LinearLayout
                android:id="@+id/control_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_previous"
                    style="@style/button_media_notifi"
                    android:src="@drawable/noti_previous_black"/>

                <ImageView
                    android:id="@+id/btn_play"
                    style="@style/button_media_notifi"
                    android:src="@drawable/noti_play_black"/>

                <ImageView
                    android:id="@+id/btn_next"
                    style="@style/button_media_notifi"
                    android:src="@drawable/noti_next_black"/>

                <ImageView
                    android:id="@+id/btn_close"
                    style="@style/button_media_notifi"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/noti_close_black"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>