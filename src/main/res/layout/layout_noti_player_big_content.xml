<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/bg_player_noti">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_player_noti"
        android:padding="@dimen/margin_noti">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_image_noti"
            android:layout_height="@dimen/size_image_noti"
            android:background="@color/bg_image"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_noti">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btn_close"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_title"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toLeftOf="@+id/btn_close"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/text_content"
                android:textSize="@dimen/text_content"/>

            <ImageView
                android:id="@+id/btn_close"
                style="@style/button_media_notifi"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/noti_close_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_previous"
                    style="@style/button_media_notifi"
                    android:src="@drawable/noti_previous_black"/>

                <ImageView
                    android:id="@+id/btn_play"
                    style="@style/button_media_notifi"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/noti_play_black"/>

                <ImageView
                    android:id="@+id/btn_next"
                    style="@style/button_media_notifi"
                    android:src="@drawable/noti_next_black"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>