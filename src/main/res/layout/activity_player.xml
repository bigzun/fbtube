<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imv_bgplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_placeholder"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <include layout="@layout/layout_toolbar_player"/>
        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="5dp"
            android:background="@color/bg_deliver"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_player"
            android:layout_below="@+id/line"/>

        <RelativeLayout
            android:id="@+id/layout_player"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp">

            <SeekBar
                android:id="@+id/seekbar_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingLeft="15dp"
                android:progressDrawable="@drawable/bg_progress_seekbar"
                android:thumb="@drawable/ic_thumb_seekbar"
                android:thumbOffset="5dp"/>

            <TextView
                android:id="@+id/timer_Seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/seekbar_timer"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="00:00"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/total_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seekbar_timer"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="00:00"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/timer_Seek"
                android:layout_marginBottom="5dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.bigzun.video.control.TriToggleButton
                        android:id="@+id/btnshuffle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/bg_select_item"
                        android:src="@drawable/btn_repeat_all"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnprevmusic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_select_item"
                        android:contentDescription="@null"
                        android:src="@drawable/btn_previous"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnplaymusic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_select_item"
                        android:contentDescription="@null"
                        android:src="@drawable/btn_play"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnnextmusic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_select_item"
                        android:contentDescription="@null"
                        android:src="@drawable/btn_next"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnDownload"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/bg_select_item"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_download_light"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>