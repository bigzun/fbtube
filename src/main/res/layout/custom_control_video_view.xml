<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/control_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/bg_controls"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/small"
            android:layout_width="48dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/exo_controls_small"/>

        <ImageButton
            android:id="@+id/button_download"
            style="@style/ButtonAction"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_download_light"/>

        <ImageButton
            android:id="@+id/button_gift"
            style="@style/ButtonAction"
            android:layout_toLeftOf="@+id/button_download"
            android:src="@drawable/ic_gift_light"/>

        <ImageButton
            android:id="@+id/button_favorite"
            style="@style/ButtonAction"
            android:layout_toLeftOf="@+id/button_gift"
            android:src="@drawable/ic_favorite_light"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_favorite"
            android:layout_toRightOf="@+id/small"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingRight="4dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/control_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_controls"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="2dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/toggle_screen"
            style="@style/ToggleScreen"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control_bottom_layout"
        android:background="@color/bg_controls"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/prev"
            style="@style/ExoMediaButton.Previous"/>

        <ImageButton
            android:id="@+id/rew"
            style="@style/ExoMediaButton.Rewind"/>

        <!--<ImageButton-->
        <!--android:id="@+id/play"-->
        <!--style="@style/ExoMediaButton"/>-->

        <ImageButton
            android:id="@+id/ffwd"
            style="@style/ExoMediaButton.FastForward"/>

        <ImageButton
            android:id="@+id/next"
            style="@style/ExoMediaButton.Next"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_centerInParent="true"
        android:background="@drawable/exo_controls_play_bg"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/exo_controls_play"/>
</RelativeLayout>
